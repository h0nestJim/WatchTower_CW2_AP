@model IEnumerable<WatchTower_V1.Models.AssetCategoryModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Searchlight</h1>
<h2>Generic Asset Categories</h2>
<div class="row">

    <a asp-action="Create">
        <div class="btn btn-primary p-2 m-3">Register New Asset Category</div>
    </a>

</div>

<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                Generic Asset Category Type
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><div class="btn btn-primary mb-2 ml-2">Edit Room</div></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><div class="btn btn-success mb-2 ml-2">View</div></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger mb-2 ml-2">Delete</div></a>
                </td>
            </tr>
        }
    </tbody>
</table>

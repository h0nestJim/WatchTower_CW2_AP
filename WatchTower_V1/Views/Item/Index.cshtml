@model IEnumerable<AssetViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Searchlight</h1>
<h2>All Assets</h2>
<div class="container">
    <form class="form-group" asp-controller="Item" asp-action="Index" method="get">
        <p>

            Search Ticket: <input type="text" name="search" />
            <input class="btn btn-primary" type="submit" value="Search" />
        </p>
    </form>
    <form class="form-group"  asp-controller="Item" asp-action="Index" method="get">
        <p>
            <input class="btn btn-outline-primary" type="submit" value="Reset" />
        </p>
    </form>
</div>
<div class="row">

    <a asp-action="Create">
        <div class="btn btn-primary p-2 m-3">Register New Asset</div>
    </a>

</div>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                Asset Name
            </th>
            <th>
                Description
            </th>
            <th>
                Category
            </th>
            <th>
                Assigned Room
            </th>
            <th>
                Assigned Campus
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CampusName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><div class="btn btn-primary mb-2 ml-2">Edit Asset</div></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><div class="btn btn-success mb-2 ml-2">View</div></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger mb-2 ml-2">Delete</div></a>
                </td>
            </tr>
        }
    </tbody>
</table>

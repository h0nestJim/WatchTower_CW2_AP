@model IEnumerable<WatchTower_V1.Models.RoomModel>

@{
    ViewData["Title"] = "Searchlight - Rooms";



}

<h1>Searchlight</h1>
<h2>Rooms</h2>
<div class="row">

    <a asp-action="Create">
        <div class="btn btn-primary p-2 m-3">Register New Room</div>
    </a>

</div>
<div class="row mb-3">
    <div class="container">
        <form class="form-group" asp-controller="Room" asp-action="Index" method="get">
            <p>
                Filter By: <input type="text" name="search" />
                <select name="type">
                    <option value="false">Room Name/Number</option>
                    <option value="true">Campus</option>
                </select>
                <input class="btn btn-primary" type="submit" value="Filter" />
            </p>

        </form>
        <form asp-controller="Room" asp-action="Index" method="get">
            <p>
                <input class="btn btn-outline-primary" type="submit" value="Reset" />
            </p>
        </form>
    </div>
</div>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                Room Number
            </th>
            <th>
                Room Designation
            </th>
            <th>
                Campus
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Campus.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><div class="btn btn-primary mb-2 ml-2">Edit Room</div></a> 
                    <a asp-action="Details" asp-route-id="@item.Id"><div class="btn btn-success mb-2 ml-2">View</div></a> 
                    <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger mb-2 ml-2">Delete</div></a>
                </td>
            </tr>
        }
    </tbody>
</table>

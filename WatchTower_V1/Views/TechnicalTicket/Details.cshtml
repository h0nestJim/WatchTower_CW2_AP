@model WatchTower_V1.Models.TechnicalTicketModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>TechnicalTicketModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOpened)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOpened)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.isClosed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.isClosed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Asset)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Asset.Description)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-6">
        @{
            if (Model.Updates.Count > 0)
            {
                <table class="table table-striped table-light table-responsive-md">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Author</th>
                            <th scope="col">Update Notes</th>
                            <th scope="col">Updated</th>

                        </tr>
                    </thead>
                    <tbody>

                        @{ foreach (var update in Model.Updates)
                            {

                                <tr>
                                    <td>
                                        <img style="width:50px; object-fit:cover; border-radius:30px" src="@update.ProfilePicture" />
                                    </td>
                                    <td>@update.UserName</td>
                                    <td>@update.Action</td>
                                    <td>@update.TimeStamp</td>

                                </tr>
                            }


                        }



                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-primary" role="alert">
                    Sorry, No Updates Available!
                </div>

            }
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Action">
            <input name="id" value="@Model.Id" type="hidden" readonly />
            <input type="text" class="w-100" placeholder="Update action details..." name="action" />
            <select name="isresolved">
                <option value="false">Issue is Ongoing</option>
                <option value="true">Mark as Resolved</option>
            </select>
            <button type="submit" class="btn btn-block btn-primary mt-2">Submit Update</button>
        </form>
    </div>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

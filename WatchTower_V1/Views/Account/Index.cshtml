@model IEnumerable<UserViewModel>




@{ if (TempData["Message"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["Message"]
        </div>
    }
}
@{ if (TempData["UserCreate"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["UserCreate"]
        </div>
    }
}

<h1>Searchlight</h1>
<h2>User Center - User Manager</h2>
<div class="row">

    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
        <div class="btn btn-primary p-2 m-3">Register New User</div>
    </a>

</div>

<div class="container">
    <form class="form-group" asp-controller="Account" asp-action="Index" method="get">
        <p>

            Search Users: <input type="text" name="search" />
            <input class="btn btn-primary" type="submit" value="Search" />
        </p>
    </form>
    <form class="form-group" asp-controller="Account" asp-action="Index" method="get">
        <p>
            <input class="btn btn-outline-primary" type="submit" value="Reset" />
        </p>
    </form>
</div>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Job Title
            </th>


            <th>
                First Name
            </th>
            <th>
                Surname
            </th>
            <th>
                Email Address
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.JobTitle)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>


                <td>
                    <a href="@Url.Action("ResetPassword", "Account", new { id = item.Id })"><div class="btn btn-success mb-2 ml-2">Reset Password to Default</div></a>

                    
                    
                        <a asp-action="Delete" asp-route-id="@item.Id"><div class="btn btn-danger mb-2 ml-2">Delete User</div></a>
                </td>

            </tr>
        }
    </tbody>
</table>


